{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.ts", // Đường dẫn đến file khởi động chính của bạn
      "outFiles": ["${workspaceFolder}/dist/**/*.js"], // Đường dẫn đến các file đã biên dịch
      "preLaunchTask": "tsc: build - tsconfig.json" // Tự động biên dịch TypeScript trước khi chạy
    }
  ]
}